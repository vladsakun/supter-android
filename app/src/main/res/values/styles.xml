<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">?attr/toolBarColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>


    </style>

    <style name="AppTheme.Dark" parent="AppTheme">

        <item name="windowBackground">@color/windowBackgroundNight</item>
        <item name="toolBarColor">@color/toolBarColorNight</item>
        <item name="btnColor">@color/btnColorNight</item>

        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>

        <item name="android:navigationBarColor">@color/toolBarColorNight</item>

    </style>

    <style name="AppTheme.Light" parent="AppTheme">

        <item name="windowBackground">@color/windowBackgroundLight</item>
        <item name="toolBarColor">@color/toolBarColorLight</item>
        <item name="btnColor">@color/btnColoLight</item>

        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/lightGray</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>