<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="DefaultParenViewWithPadding">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">@dimen/buttonMinWidth</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PurchaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <!-- Detail Purchase -->
    <style name="DefaultCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardElevation">@dimen/cardElevation</item>
    </style>

    <style name="PotentialItemCardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">13dp</item>
    </style>

    <style name="PurchaseInfoCardViewShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopLeft">@dimen/cornerSizePurchaseInfo</item>
        <item name="cornerSizeTopRight">@dimen/cornerSizePurchaseInfo</item>
        <item name="cornerSizeBottomRight">@dimen/cornerSizePurchaseInfo</item>
        <item name="cornerSizeBottomLeft">@dimen/cornerSizePurchaseInfo</item>
    </style>

    <style name="DetailPurchaseTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Subtitle1</item>
    </style>

    <style name="PotentialRingView" parent="">
        <item name="bgColor">@color/light_gray</item>
        <item name="fgColorStart">@color/orange_200</item>
        <item name="fgColorEnd">@color/orange_700</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="android:layout_width">@dimen/potentialProgressViewSize</item>
        <item name="android:layout_height">@dimen/potentialProgressViewSize</item>
    </style>

    <style name="ParentPercentageView" parent="">
        <item name="android:layout_width">@dimen/potentialProgressViewSize</item>
        <item name="android:layout_height">@dimen/potentialProgressViewSize</item>
        <item name="percentageWidth">50</item>
        <item name="centerColor">?android:colorBackground</item>
        <item name="animDuration">1000</item>
        <item name="textSize">42sp</item>
        <item name="textColor">?android:textColorPrimary</item>
    </style>

    <style name="PercentageView" parent="ParentPercentageView">
        <item name="progressBackgroundColor">@color/light_gray</item>
        <item name="progressColor">@color/orange_700</item>
    </style>

    <!--Profile-->
    <style name="ProfileTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="ProfileTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/editTextMarginTop</item>
        <item name="endIconDrawable">@drawable/ic_info_outline_white_24dp</item>
        <item name="endIconMode">custom</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--Toolbar-->
    <style name="Widget.MaterialComponents.Toolbar.Surface.MyToolbar">
        <item name="titleTextColor">?android:textColorPrimary</item>
    </style>

</resources>