<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">@dimen/buttonMinWidth</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/button</item>
    </style>

    <style name="PurchaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>