<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/columnColor">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/primaryElementColor"
        app:cardElevation="@dimen/cardElevation"
        app:cardUseCompatPadding="true">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/purchase_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/cardPadding"
                android:text="Laptop"
                android:textColor="?android:attr/textColorHint"
                android:textSize="@dimen/titleTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/purchase_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchase_name"
                android:layout_alignParentStart="true"
                android:padding="@dimen/cardPadding"
                android:text="2000$"
                android:textColor="?android:attr/textColorHint"
                android:textSize="@dimen/hintTextSize" />

            <TextView
                android:id="@+id/purchase_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purchase_name"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/cardPadding"
                android:text="High priority"
                android:textColor="@color/red"
                android:textSize="@dimen/hintTextSize"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
