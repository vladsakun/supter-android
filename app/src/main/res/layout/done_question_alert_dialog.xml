<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetweenBigViews"
        android:layout_marginTop="@dimen/marginBetweenBigViews"
        android:layout_marginEnd="@dimen/marginBetweenBigViews"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:text="@string/how_would_the_purchase_be_useful" />

    <FrameLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/dialog_header_bg"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="@dimen/marginBetweenHintAndView"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/dialog_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_header" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/dialog_header" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetweenBigViews"
        android:layout_marginTop="@dimen/marginBetweenBigViews"
        android:layout_marginEnd="@dimen/marginBetweenBigViews"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_title"
        tools:text="Simple answer" />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBetweenBigViews"
        android:layout_marginEnd="@dimen/marginBetweenBigViews"
        android:text="@string/ok"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

</androidx.constraintlayout.widget.ConstraintLayout>